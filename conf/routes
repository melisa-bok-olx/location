# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /health                         				com.olx.location.controllers.LocationController.health

# Create and update users
POST    /user			               					com.olx.location.controllers.LocationController.registerUser
POST    /user/:email/location         					com.olx.location.controllers.LocationController.updateLocation(email: String, latitude: Double, longitude: Double)

GET    /user/:email               						com.olx.location.controllers.LocationController.getUser(email: String)
GET    /user/:email/location       						com.olx.location.controllers.LocationController.getUserLocations(email: String, pageSize: Int ?= 100, offset: Int ?= 0)

